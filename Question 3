#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i, sum=0;

    printf("--------------------------------------------\n");

    while(i!=0)
    {
        if(i>0)
        {
            i=0;
        }
        else if (i==0)
        {
            break;
        }
        printf("Please Enter a Value.\n");
        scanf("%d", &i);
        sum += i;
        printf("Cumulative sum = %d \n", sum);
    }
    printf("--------------------------------------------\n");
    return 0;
}
